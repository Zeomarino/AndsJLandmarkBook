<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bookbackground"
    android:backgroundTint="@color/teal_700"
    android:backgroundTintMode="screen"
    android:textAlignment="center"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/countryNameText"
        android:layout_width="273dp"
        android:layout_height="72dp"
        android:layout_marginStart="66dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="133dp"
        android:fontFamily="casual"
        android:gravity="center_vertical"
        android:text="Country Name"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/landmarkNameText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="219dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="34dp"
        app:layout_constraintBottom_toTopOf="@+id/landmarkNameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/resimmarinov" />

    <TextView
        android:id="@+id/landmarkNameText"
        android:layout_width="283dp"
        android:layout_height="58dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="casual"
        android:gravity="center_vertical"
        android:text="Landmark Name"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/countryNameText"
        app:layout_constraintEnd_toEndOf="@+id/countryNameText"
        app:layout_constraintStart_toStartOf="@+id/countryNameText"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>